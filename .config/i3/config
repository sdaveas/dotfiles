# Power
set $mode_system System (l) lock, (f) funcy lock, (b) blur lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (p) shutdown
mode "$mode_system" {
    bindsym l mode "default"; exec --no-startup-id i3lock -i ~/Pictures/i3/lockscreens/not_so_large_door_2.png -p default -n
    bindsym f mode "default"; exec --no-startup-id ~/.config/i3/fortune-lock
    bindsym b mode "default"; exec --no-startup-id ~/.config/i3/blur_background.sh
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+x mode "$mode_system"

bindsym Shift+Up exec amixer -q set Master 2dB+ unmute
bindsym Shift+Down exec amixer -q set Master 2dB- unmute


bindsym Print exec scrot -e 'mv $f /tmp/ && gimp /tmp/$f'
